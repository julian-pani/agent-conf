{
  "name": "agent-conf",
  "version": "0.2.0",
  "description": "CLI utility to sync AI agent configurations across repositories",
  "author": "Julian Pani",
  "type": "module",
  "bin": {
    "agent-conf": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsup",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check",
    "check:fix": "biome check --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "install:global": "pnpm build && npm install -g .",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "ora": "^8.0.1",
    "picocolors": "^1.0.1",
    "simple-git": "^3.25.0",
    "tabtab": "^3.0.2",
    "yaml": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.14.0",
    "@types/tabtab": "^3.0.4",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "lint-staged": "^16.2.7",
    "semantic-release": "^24.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "ai-agents",
    "claude",
    "codex",
    "developer-tools",
    "config-sync",
    "engineering-standards"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julian-pani/agent-conf.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/julian-pani/agent-conf#readme",
  "bugs": {
    "url": "https://github.com/julian-pani/agent-conf/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --no-errors-on-unmatched"
    ]
  }
}
